<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.vaifrete"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <permission
        android:name="br.com.vaifrete.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="br.com.vaifrete.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Required to show current location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Required OpenGL ES 2.0. for Maps V2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.vaifrete.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.vaifrete.HelpFragment" >
        </activity>
        <activity
            android:name="br.com.vaifrete.Home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="br.com.vaifrete.MapaActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="br.com.vaifrete.ListFreteActivity"
            android:label="@string/title_activity_list_frete" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAYI2gRXCYR_9L-yb6OrS23i4IOQUhSAx4" />

        <activity
            android:name="br.com.vaifrete.DetailFreteActivity"
            android:label="@string/title_activity_detail_frete" >
        </activity>
        <activity
            android:name="br.com.vaifrete.CadastroFotoActivity"
            android:label="@string/title_activity_cadastro" >
        </activity>
        <activity
            android:name="br.com.vaifrete.ComoEstouActivity"
            android:label="@string/title_activity_como_estou" >
        </activity>
    </application>

</manifest>
